<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextInputCustom" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_marginLeft">@dimen/padding_16</item>
        <item name="android:layout_marginRight">@dimen/padding_16</item>
    </style>

    <style name="ButtonCustomAccent" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_btn_accent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonCustomVK" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/vk</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
